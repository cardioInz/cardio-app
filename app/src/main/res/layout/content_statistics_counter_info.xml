<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="statisticCounter"
            type="cardio_app.viewmodel.statistics.StatisticCounterViewModel" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/statistics_counters_table_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:contextActivity="cardio_app.activity.statistics.StatisticsCounterActivity"
        tools:showIn="@layout/activity_statistics_counter"
        android:orientation="vertical"
        android:background="@color/colorPrimary">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/input_activities_background"
            android:layout_marginBottom="5dp"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|left"
                android:text="@string/statistics_counter_total"
                android:textSize="@dimen/statistic_header_size"
                android:textStyle="bold"
                android:layout_weight="2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|end"
                android:text="@{statisticCounter.totalCnt}"
                android:textAlignment="textEnd"
                android:textSize="@dimen/statistic_header_size"
                android:layout_weight="1"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/input_activities_background"
            android:layout_marginBottom="5dp"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|left"
                android:text="@string/statistics_counter_well"
                android:textSize="@dimen/statistic_header_size"
                android:textStyle="bold"
                android:layout_weight="2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|end"
                android:text="@{statisticCounter.wellCnt}"
                android:textAlignment="textEnd"
                android:textSize="@dimen/statistic_header_size"
                android:layout_weight="1"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/input_activities_background"
            android:layout_marginBottom="5dp"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|left"
                android:text="@string/statistics_counter_middle"
                android:textSize="@dimen/statistic_header_size"
                android:textStyle="bold"
                android:layout_weight="2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|end"
                android:text="@{statisticCounter.middleCnt}"
                android:textAlignment="textEnd"
                android:textSize="@dimen/statistic_header_size"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/input_activities_background"
            android:layout_marginBottom="5dp"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|left"
                android:text="@string/statistics_counter_bad"
                android:textSize="@dimen/statistic_header_size"
                android:textStyle="bold"
                android:layout_weight="2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|end"
                android:text="@{statisticCounter.badCnt}"
                android:textAlignment="textEnd"
                android:textSize="@dimen/statistic_header_size"
                android:layout_weight="1"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/input_activities_background"
            android:layout_marginBottom="5dp"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|left"
                android:text="@string/statistics_counter_bad_diff"
                android:textSize="@dimen/statistic_header_size"
                android:textStyle="bold"
                android:layout_weight="2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|end"
                android:text="@{statisticCounter.badDiffCnt}"
                android:textAlignment="textEnd"
                android:textSize="@dimen/statistic_header_size"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/input_activities_background"
            android:layout_marginBottom="5dp"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|left"
                android:text="@string/statistics_counter_no_arrhythmia"
                android:textSize="@dimen/statistic_header_size"
                android:textStyle="bold"
                android:layout_weight="2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|end"
                android:text="@{statisticCounter.noArrhythmiaCnt}"
                android:textAlignment="textEnd"
                android:textSize="@dimen/statistic_header_size"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/input_activities_background"
            android:layout_marginBottom="5dp"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|left"
                android:text="@string/statistics_counter_arrhythmia"
                android:textSize="@dimen/statistic_header_size"
                android:textStyle="bold"
                android:layout_weight="2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|end"
                android:text="@{statisticCounter.arrhythmiaCnt}"
                android:textSize="@dimen/statistic_header_size"
                android:layout_weight="1"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/input_activities_background"
            android:layout_marginBottom="5dp"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|left"
                android:text="@string/statistics_counter_errors"
                android:textSize="@dimen/statistic_header_size"
                android:textStyle="bold"
                android:layout_weight="2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|end"
                android:text="@{statisticCounter.unknownCnt}"
                android:textAlignment="textEnd"
                android:textSize="@dimen/statistic_header_size"
                android:layout_weight="1"/>
        </LinearLayout>


    </LinearLayout>
</layout>