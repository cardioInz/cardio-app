<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
            name="statisticCounter"
            type="cardio_app.viewmodel.statistics.StatisticCounterViewModel"/>
    </data>

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/statistics_counters_table_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:contextActivity="cardio_app.activity.statistics.StatisticsCounterActivity"
        tools:showIn="@layout/activity_statistics_counter"
        >


        <TableRow>
            <TextView android:text="@string/statistics_counter_total"
                android:layout_gravity="start"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:textSize="@dimen/statistic_header_size"/>
            <Space android:layout_gravity="fill" android:minWidth="@dimen/statistic_min_space_width"/>
            <TextView android:text="@{statisticCounter.totalCnt}"
                android:layout_gravity="end"
                android:textAlignment="textEnd"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="@dimen/statistic_header_size"/>
        </TableRow>

        <TableRow>
            <TextView android:text="@string/statistics_counter_well"
                android:layout_gravity="start"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:textSize="@dimen/statistic_header_size"/>
            <Space android:layout_gravity="fill" android:minWidth="@dimen/statistic_min_space_width"/>
            <TextView android:text="@{statisticCounter.wellCnt}"
                android:layout_gravity="end"
                android:textAlignment="textEnd"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="@dimen/statistic_header_size"/>
        </TableRow>

        <TableRow>
            <TextView android:text="@string/statistics_counter_middle"
                android:layout_gravity="start"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:textSize="@dimen/statistic_header_size"/>
            <Space android:layout_gravity="fill" android:minWidth="@dimen/statistic_min_space_width"/>
            <TextView android:text="@{statisticCounter.middleCnt}"
                android:layout_gravity="end"
                android:textAlignment="textEnd"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="@dimen/statistic_header_size"/>
        </TableRow>

        <TableRow>
            <TextView android:text="@string/statistics_counter_bad"
                android:layout_gravity="start"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:textSize="@dimen/statistic_header_size"/>
            <Space android:layout_gravity="fill" android:minWidth="@dimen/statistic_min_space_width"/>
            <TextView android:text="@{statisticCounter.badCnt}"
                android:layout_gravity="end"
                android:textAlignment="textEnd"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="@dimen/statistic_header_size"/>
        </TableRow>

        <TableRow>
            <TextView android:text="@string/statistics_counter_bad_diff"
                android:layout_gravity="start"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:textSize="@dimen/statistic_header_size"/>
            <Space android:layout_gravity="fill" android:minWidth="@dimen/statistic_min_space_width"/>
            <TextView android:text="@{statisticCounter.badDiffCnt}"
                android:layout_gravity="end"
                android:textAlignment="textEnd"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="@dimen/statistic_header_size"/>
        </TableRow>

        <TableRow>
            <TextView android:text="@string/statistics_counter_no_arrhythmia"
                android:layout_gravity="start"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:textSize="@dimen/statistic_header_size"/>
            <Space android:layout_gravity="fill" android:minWidth="@dimen/statistic_min_space_width"/>
            <TextView android:text="@{statisticCounter.noArrhythmiaCnt}"
                android:layout_gravity="end"
                android:textAlignment="textEnd"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="@dimen/statistic_header_size"/>
        </TableRow>

        <TableRow>
            <TextView android:text="@string/statistics_counter_arrhythmia"
                android:layout_gravity="start"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:textSize="@dimen/statistic_header_size"/>
            <Space android:layout_gravity="fill" android:minWidth="@dimen/statistic_min_space_width"/>
            <TextView android:text="@{statisticCounter.arrhythmiaCnt}"
                android:layout_gravity="end"
                android:textAlignment="textEnd"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="@dimen/statistic_header_size"/>
        </TableRow>

        <TableRow>
            <TextView android:text="@string/statistics_counter_errors"
                android:layout_gravity="start"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:textSize="@dimen/statistic_header_size"/>
            <Space android:layout_gravity="fill" android:minWidth="@dimen/statistic_min_space_width"/>
            <TextView android:text="@{statisticCounter.unknownCnt}"
                android:layout_gravity="end"
                android:textAlignment="textEnd"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="@dimen/statistic_header_size"/>
        </TableRow>

    </TableLayout>
</layout>