<?xml version="1.0" encoding="utf-8"?>
<layout>

    <GridLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/menu_grid_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorPrimary"
        tools:contextActivity="cardio_app.activity.MainActivity"
        tools:showIn="@layout/activity_main"
        android:layout_gravity="center"
        android:numColumns="auto_fit"
        android:columnCount="4"
        android:stretchMode="columnWidth"
        >

        <Button
            style="@style/MenuButton"
            android:text="@string/my_profile"
            android:id="@+id/button_my_profile"
            android:drawableTop="@drawable/my_profile"
            android:textSize="@dimen/_10sdp"
            android:width="@dimen/_70sdp"
            android:height="@dimen/_70sdp"
            android:layout_width="@dimen/_95sdp"
            android:layout_height="@dimen/_95sdp"
            android:layout_gravity="center"
            android:gravity="center"
            android:onClick="showProfile"/>

        <Button
            style="@style/MenuButton"
            android:text="@string/reports"
            android:id="@+id/button_reports"
            android:drawableTop="@drawable/reports"
            android:onClick="showCreatePdfReport"
            android:textSize="@dimen/_10sdp"
            android:width="@dimen/_70sdp"
            android:height="@dimen/_70sdp"
            android:layout_width="@dimen/_95sdp"
            android:layout_height="@dimen/_95sdp"
            android:layout_gravity="center"
            android:gravity="center"
            />

        <Button
            style="@style/MenuButton"
            android:text="@string/add_measure"
            android:id="@+id/button_add_measure"
            android:drawableTop="@drawable/add_m"
            android:onClick="addMeasure"
            android:textSize="@dimen/_10sdp"
            android:width="@dimen/_70sdp"
            android:height="@dimen/_70sdp"
            android:layout_width="@dimen/_95sdp"
            android:layout_height="@dimen/_95sdp"
            android:layout_gravity="center"
            android:gravity="center"
            />

        <Button
            style="@style/MenuButton"
            android:text="@string/events_list"
            android:id="@+id/button_events_list"
            android:drawableTop="@drawable/list_e"
            android:onClick="showEventsList"
            android:textSize="@dimen/_10sdp"
            android:width="@dimen/_70sdp"
            android:height="@dimen/_70sdp"
            android:layout_width="@dimen/_95sdp"
            android:layout_height="@dimen/_95sdp"
            android:layout_gravity="center"
            android:gravity="center"
            />

        <Button
            style="@style/MenuButton"
            android:text="@string/add_event"
            android:id="@+id/button_add_event"
            android:drawableTop="@drawable/add_e"
            android:onClick="addEvent"
            android:textSize="@dimen/_10sdp"
            android:width="@dimen/_70sdp"
            android:height="@dimen/_70sdp"
            android:layout_width="@dimen/_95sdp"
            android:layout_height="@dimen/_95sdp"
            android:layout_gravity="center"
            android:gravity="center"
            />

        <Button
            style="@style/MenuButton"
            android:text="@string/stats"
            android:id="@+id/button_stats"
            android:drawableTop="@drawable/stats"
            android:onClick="showStatistics"
            android:textSize="@dimen/_10sdp"
            android:width="@dimen/_70sdp"
            android:height="@dimen/_70sdp"
            android:layout_width="@dimen/_95sdp"
            android:layout_height="@dimen/_95sdp"
            android:layout_gravity="center"
            android:gravity="center"
            />

        <Button
            style="@style/MenuButton"
            android:text="@string/drugs"
            android:id="@+id/button_drugs"
            android:drawableTop="@drawable/drugs"
            android:onClick="showDrugsList"
            android:textSize="@dimen/_10sdp"
            android:width="@dimen/_70sdp"
            android:height="@dimen/_70sdp"
            android:layout_width="@dimen/_95sdp"
            android:layout_height="@dimen/_95sdp"
            android:layout_gravity="center"
            android:gravity="center"
            />

        <Button
            style="@style/MenuButton"
            android:text="@string/add_drug"
            android:id="@+id/button_add_drug"
            android:drawableTop="@drawable/add_drug"
            android:textSize="@dimen/_10sdp"
            android:width="@dimen/_70sdp"
            android:height="@dimen/_70sdp"
            android:layout_width="@dimen/_95sdp"
            android:layout_height="@dimen/_95sdp"
            android:layout_gravity="center"
            android:gravity="center"
            />

        <Button
            style="@style/MenuButton"
            android:text="@string/measures_list"
            android:id="@+id/button_list_measures"
            android:drawableTop="@drawable/list_m"
            android:onClick="showMeasuresList"
            android:textSize="@dimen/_10sdp"
            android:width="@dimen/_70sdp"
            android:height="@dimen/_70sdp"
            android:layout_width="@dimen/_95sdp"
            android:layout_height="@dimen/_95sdp"
            android:layout_gravity="center"
            android:gravity="center"
            />

        <Button
            style="@style/MenuButton"
            android:text="@string/import_data"
            android:id="@+id/button_import"
            android:drawableTop="@drawable/import_ic"
            android:onClick="showImportData"
            android:textSize="@dimen/_10sdp"
            android:width="@dimen/_70sdp"
            android:height="@dimen/_70sdp"
            android:layout_width="@dimen/_95sdp"
            android:layout_height="@dimen/_95sdp"
            android:layout_gravity="center"
            android:gravity="center"
            />

        <Button
            style="@style/MenuButton"
            android:text="@string/settings"
            android:id="@+id/button_settings"
            android:drawableTop="@drawable/settings"
            android:textSize="@dimen/_10sdp"
            android:width="@dimen/_70sdp"
            android:height="@dimen/_70sdp"
            android:layout_width="@dimen/_95sdp"
            android:layout_height="@dimen/_95sdp"
            android:layout_gravity="center"
            android:gravity="center"
            />

        <Button
            style="@style/MenuButton"
            android:text="@string/export_data"
            android:id="@+id/button_export"
            android:drawableTop="@drawable/export"
            android:onClick="showExportData"
            android:textSize="@dimen/_10sdp"
            android:width="@dimen/_70sdp"
            android:height="@dimen/_70sdp"
            android:layout_width="@dimen/_95sdp"
            android:layout_height="@dimen/_95sdp"
            android:layout_gravity="center"
            android:gravity="center"
            />
    </GridLayout>

</layout>

